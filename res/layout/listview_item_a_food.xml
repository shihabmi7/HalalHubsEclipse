<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.applibraryshihab"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@color/list_restaurent_bg"
    android:paddingBottom="5dp" >

    <!-- <ImageView -->
    <!-- android:id="@+id/imageView_masjid_pic" -->
    <!-- android:layout_width="70dp" -->
    <!-- android:layout_height="55dp" -->
    <!-- android:layout_margin="5dp" -->
    <!-- android:scaleType="centerCrop" -->
    <!-- android:src="@drawable/ic_launcher" /> -->

    <ImageView
        android:id="@+id/imageView_food_pic"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <!-- android:scaleType="fitXY" -->

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView_food_pic"
        android:layout_toRightOf="@+id/imageView_food_pic"
        android:text="Papus Fish n Chips"
        android:textColor="@color/list_restaurent_name_text" />

    <TextView
        android:id="@+id/food_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/food_name"
        android:layout_below="@+id/food_name"
        android:layout_marginTop="6dp"
        android:text="130 reviews"
        android:textColor="@color/list_restaurent_review_text" />

</RelativeLayout> <!-- android:layout_alignParentLeft="true" -->
