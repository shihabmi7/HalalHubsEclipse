<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"-->
    <!--android:layout_width="wrap_content" android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="8dp" android:visibility="gone" />-->

    <!--<ScrollView android:id="@+id/login_form" android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content" >-->

    <TextView
        android:id="@+id/login_status_message"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="@dimen/status_message_font_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_edittext_mail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/login_status_message"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/login_form_identifier_edittext"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.9"
            android:focusable="true"
            android:hint="Your Email"
            android:textColor="#FFFFFF"
            android:textColorHint="#D0D3D6"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:src="@drawable/mail" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_edittext_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_edittext_mail"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <EditText
            android:id="@+id/login_form_password_edittext"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_weight="0.9"
            android:focusable="true"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#D0D3D6"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:src="@drawable/password" />

    </LinearLayout>

    <!--<EditText-->
    <!--android:id="@+id/login_form_password_edittext"-->
    <!--style="@style/EditTextDesign"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="40dp"-->
    <!--android:layout_below="@id/layout_edittext_mail"-->
    <!--android:focusable="true"-->
    <!--android:hint="Your Password"-->
    <!--android:inputType="textPassword"-->
    <!--android:textColor="#6A737B"-->
    <!--android:textColorHint="#D0D3D6"></EditText>-->

    <Button
        android:id="@+id/login_button"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@id/layout_edittext_password"
        android:layout_margin="13dp"
        android:background="@color/color_white"
        android:text="@string/loginr_form_button"
        android:textSize="14sp" />


    <!--</ScrollView>-->

</RelativeLayout>